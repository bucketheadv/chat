<div class="ui green fixed inverted menu">
  <div class="ui container">
    <a href="<%= root_path %>" class="header item">
      <%= t("app.name") %>
    </a>
    <a href="<%= root_path %>" class="item"><%= t("actionview.page.home") %></a>
    <div class="ui simple dropdown item">
      <%= t("actionview.page.more") %>
      <i class="dropdown icon"></i>
      <div class="menu">
        <a href="<%= all_users_path %>" class="item"><%= t("actionview.page.all_users") %></a>
      </div>
    </div>
    <% if current_user %>
      <div class="ui simple right floated dropdown item">
        <%= current_user.email %>
        <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to t("operation.contacts"), my_contacts_path, class: 'item' %>
          <!--<%= link_to "#{t("operation.message_board")}(#{current_user.unread_all_messages.count})", my_message_board_path, class: 'item' %>-->
          <a href="<%= my_message_board_path %>" class="item">
            <%= t("operation.message_board") %>
            <div class="floating ui orange label">
              <%= current_user.unread_all_messages.count %>
            </div>
          </a>
          <%= link_to t("operation.sign_out"), destroy_user_session_path, method: :delete, class: "item" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
